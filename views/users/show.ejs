<%- include("../partials/header") %>

<h1>User Profile</h1>

<div class="card mb-3">
	<div class="row no-gutters">
		<div class="col-md-4">
			<img src="<%= user.avatar %>" class="card-img" alt="ser Profile Image">
    </div>
	<div class="col-md-8">
		<div class="card-body">
			<% if (user.isAdmin) { %>}
				<h5 class="card-title"><%= user.firstName + " " + user.lastName %> (<%= user.username %>) - ADMIN</h5>
			<% } else { %>
				<h5 class="card-title"><%= user.firstName + " " + user.lastName %> (<%= user.username %>)</h5>
			<% } %>
			<p class="card-text"><%= user.email %></p>
			<p class="card-text">Campgrounds:</p>
			<ul>
			<% campgrounds.forEach(function(campground) { %>
				<li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
			<% }); %>
			</ul>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>