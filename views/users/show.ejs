<%- include("../partials/header") %>

<h1>User Profile</h1>

<div class="card mb-3">
	<div class="row no-gutters">
		<div class="col-md-4">
			<% if(user.avatar) { %>
			<img src="<%= user.avatar %>" class="card-img" alt="User Profile Image">
			<% } else { %>
				<img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" class="card-img" alt="User Profile Image">
			<% } %> 
    </div>
	<div class="col-md-8">
		<div class="card-body">
			<% if (user.isAdmin) { %>
				<h5 class="card-title"><%= user.firstName + " " + user.lastName %> (<%= user.username %>) - ADMIN</h5>
			<% } else { %>
				<h5 class="card-title"><%= user.firstName + " " + user.lastName %> (<%= user.username %>)</h5>
			<% } %>
			<p class="card-text"><%= user.email %></p>
			<p class="card-text">Campgrounds:</p>
			<% if (campgrounds.length > 0) { %>
				<ul>
				<% campgrounds.forEach(function(campground) { %>
					<li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
				<% }); %>
				</ul>
			<% } else { %>
			<p><strong>This user hasn't made any campgrounds yet!</strong></p>
			<% } %>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>