<%- include("../partials/header") %>

	<div class="text-center">
		<h1>Edit <%= campground.name %></h1>
			<div class="row justify-content-center">
				<div class="col-lg-6">
					<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
						<div class="form-group">
							<label for="inputCampgroundName" hidden>Name</label>
							<input type="text" name="campground[name]" class="form-control" id="inputCampgroundName" aria-describedby="campgroundNameHelp" value="<%= campground.name %>" required>
							<small id="campgroundNameHelp" class="form-text text-muted">Edit name of the campground</small>
						</div>
						<div class="form-group">
							<label for="inputPrice" hidden>Price</label>
							<div class="input-group">
								<div class="input-group-prepend">
									<div class="input-group-text">$</div>
								</div>
								<% if(campground.price){ %>
								<input type="number" name="campground[price]" class="form-control" id="inputPrice" aria-describedby="priceHelp" value="<%= campground.price.toFixed(2) %>" onchange="((el)=>{el.value=parseFloat(el.value).toFixed(2);})(this)" min="0.00" step="0.01">
								<% } else { %>
								<input type="number" name="campground[price]" class="form-control" id="inputPrice" aria-describedby="priceHelp" value="0.00" onchange="((el)=>{el.value=parseFloat(el.value).toFixed(2);})(this)" min="0.00" step="0.01">
								<% } %>
							</div>
							<small id="priceHelp" class="form-text text-muted">Edit price per month for the campground</small>
						</div>
						<div class="form-group">
							<label for="inputCampgroundImage" hidden>Image</label>
							<input type="text" name="campground[image]" class="form-control" id="inputCampgroundImage" aria-describedby="campgroundImageHelp" value="<%= campground.image %>" required>
							<small id="campgroundImageHelp" class="form-text text-muted">Edit image for the campground</small>
						</div>
						<div class="form-group">
							<label for="inputCampgroundDescription" hidden>Description</label>
						<textarea name="campground[description]" class="form-control" id="inputCampgroundDescription" rows="5" aria-describedby="campgroundDescriptionHelp" required><%= campground.description %></textarea>
						<small id="campgroundDescriptionHelp" class="form-text text-muted">Edit description for the campground</small>
						</div>
						<div class="form-group">
							<label for="inputCampgroundAmenities" hidden>Amenities</label>
						<textarea name="campground[amenities]" class="form-control" id="inputCampgroundAmenities" rows="5" aria-describedby="campgroundAmenitiesHelp" required><%= campground.amenities %></textarea>
						<small id="campgroundAmenitiesHelp" class="form-text text-muted">Edit amenities for the campground</small>
						</div>
					  <button type="submit" class="btn btn-primary btn-block">Submit</button>
					</form>
					<p class="text-left mt-3"><a href="/campgrounds/<%= campground._id %>">Go Back</a></p>
				</div>
			</div>
	</div>

<%- include("../partials/footer") %>