<%- include("../partials/header") %>

	<header class="jumbotron">
		<div class="container">
			<h1 class="display-4">Welcome to YelpCamp!</h1>
			<p class="lead">View Our Hand-Picked Campgrounds From All Over the World!</p>
			<p><a href="/campgrounds/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Campground</a></p>
		</div>
	</header>
	
	<div class="row">
		<div class="col-12">
			<h3>Our Most Popular Campgrounds!</h3>
		</div>
	</div>
	
	<div class="row text-center">
	<% campgrounds.forEach(function(campground) { %>
		<div class="col-lg-3 col-md-6 mb-2">
			<div class="card">
  				<img class="card-img-top campgroundListImg" src="<%= campground.image %>" alt="<%= campground.name %>"  loading="lazy">
  					<div class="card-body">
						<h4 class="card-text"><%= campground.name %></h4>
				</div>
				<p><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info <i class="fas fa-angle-right"></i></a></p>
			</div>
		</div>
	<% }); %>
	</div>

<%- include("../partials/footer") %>