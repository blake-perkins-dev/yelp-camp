<%- include("../partials/header") %>

	<div class="text-center">
		<h1>Create a New Campground</h1>
			<div class="row justify-content-center">
				<div class="col-lg-6">
					<form action="/campgrounds" method="POST">
						<div class="form-group">
							<label for="inputName" hidden>Name</label>
							<input type="text" name="name" class="form-control" id="inputName" aria-describedby="nameHelp" placeholder="Name" required>
							<small id="nameHelp" class="form-text text-muted">Enter name of the campground</small>
						</div>
						
						<div class="form-group">
							<label for="inputPrice" hidden>Price</label>							
							<div class="input-group">
								<div class="input-group-prepend">
									<div class="input-group-text">$</div>
								</div>
								<input type="number" name="price" class="form-control" id="inputPrice" aria-describedby="priceHelp" placeholder="Price" onchange="((el)=>{el.value=parseFloat(el.value).toFixed(2);})(this)" min="0.00" step="0.01">
							</div>
							<small id="priceHelp" class="form-text text-muted">Enter price per month for the campground</small>
						</div>
						
						<div class="form-group">
							<label for="inputImage" hidden>Image</label>
							<input type="text" name="image" class="form-control" id="inputImage" aria-describedby="imageHelp" placeholder="Image" required>
							<small id="imageHelp" class="form-text text-muted">Enter image for the campground</small>
						</div>
						<div class="form-group">
							<label for="inputDescription" hidden>Description</label>
						<textarea name="description" class="form-control" id="inputDescription" rows="5" aria-describedby="descriptionHelp" placeholder="Description" required></textarea>
						<small id="descriptionHelp" class="form-text text-muted">Enter description for the campground</small>
						</div>
						<div class="form-group">
							<label for="inputAmenities" hidden>Amenities</label>
						<textarea name="amenities" class="form-control" id="inputAmenities" rows="5" aria-describedby="amenitiesHelp" placeholder="Amenities" required></textarea>
						<small id="amenitiesHelp" class="form-text text-muted">Enter amenities for the campground</small>
						</div>
					  <button type="submit" class="btn btn-primary btn-block">Submit</button>
					</form>
					<p class="text-left mt-3"><a href="/campgrounds">Go Back</a></p>
				</div>
			</div>
	</div>

<%- include("../partials/footer") %>