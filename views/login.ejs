<%- include("./partials/header") %>

	<div class="text-center">
		<h1>Login</h1>
		<div class="row justify-content-center">
			<div class="col-lg-4">
				<form action="/login" method="POST">
					<div class="form-group">
						<label for="inputUsername" hidden>Username</label>
						<input type="text" name="username" class="form-control" id="inputUsername" aria-describedby="usernameHelp" placeholder="Username">
						<small id="usernameHelp" class="form-text text-muted">Enter Username</small>
					</div>
					<div class="form-group">
						<label for="inputPassword" hidden>Password</label>
						<input type="password" name="password" class="form-control" id="inputPassword" aria-describedby="passwordHelp" placeholder="Password">
						<small id="passwordHelp" class="form-text text-muted">Enter Password</small>
					</div>
				  <button type="submit" class="btn btn-primary btn-block">Login</button>
				</form>
				<p class="text-left mt-3"><a href="/campgrounds">Go Back</a></p>
			</div>
		</div>
	</div>

<%- include("./partials/footer") %>